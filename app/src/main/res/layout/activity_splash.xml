<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity">

    <View
        android:id="@+id/box"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/open_box" />

    <ImageView
        android:id="@+id/bloodDrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="Blood Drop" />


    <TextView
        android:id="@+id/footerCreatedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="64dp"
        android:text="Created by:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/footerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"

        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="32dp"
        android:text="Shaik Mohammed Yasar"
        android:textColor="@color/black"
        android:textSize="17sp" />


</RelativeLayout>
