<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReceiveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/red"
            android:contentDescription="Donate Blood"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOOD"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/red"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_field_background"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/location"
                android:contentDescription="Location Icon"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:hint="Click to find location"
                android:textColorHint="@color/black"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="text" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title for Blood Group Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Blood Group"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <!-- RadioGroup for Blood Group Options -->
            <RadioGroup
                android:id="@+id/radioGroupBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Blood Group Options -->
                <RadioButton
                    android:id="@+id/radio_a_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+" />

                <RadioButton
                    android:id="@+id/radio_a_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-" />

                <RadioButton
                    android:id="@+id/radio_b_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+" />

                <RadioButton
                    android:id="@+id/radio_b_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-" />

                <RadioButton
                    android:id="@+id/radio_ab_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+" />

                <RadioButton
                    android:id="@+id/radio_ab_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-" />

                <RadioButton
                    android:id="@+id/radio_o_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+" />

                <RadioButton
                    android:id="@+id/radio_o_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O-" />

            </RadioGroup>
        </LinearLayout>





        <Button
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginTop="16dp" />



    </LinearLayout>
</ScrollView>
